# test_comparisons.zephyr
# Test comparison operations with the unified integer system

print("=== Testing Comparison Operations ===")
print()

print("1. Basic integer comparisons:")
a = 10
b = 20
print("a =", a, "b =", b)
print("a < b:", a < b)
print("a > b:", a > b)
print("a == 10:", a == 10)
print("b >= 20:", b >= 20)
print()

print("2. Mixed type comparisons:")
regular_int = 100
i16_val : i16 = 200
i32_val : i32 = 150
u32_val : u32 = 300

print("regular_int =", regular_int, "type:", type(regular_int))
print("i16_val =", i16_val, "type:", type(i16_val))
print("i32_val =", i32_val, "type:", type(i32_val))
print("u32_val =", u32_val, "type:", type(u32_val))
print()

print("Comparisons:")
print("regular_int < i16_val:", regular_int < i16_val)
print("i16_val > i32_val:", i16_val > i32_val)
print("i32_val == 150:", i32_val == 150)
print("u32_val >= regular_int:", u32_val >= regular_int)
print()

print("3. Edge case comparisons:")
large_u32 : u32 = 3000000000
huge_i64 : i64 = 5000000000

print("large_u32 =", large_u32, "type:", type(large_u32))
print("huge_i64 =", huge_i64, "type:", type(huge_i64))
print("large_u32 < huge_i64:", large_u32 < huge_i64)
print()

print("âœ… All comparison tests completed!")
print("The unified integer system handles comparisons correctly")
print("across all integer types (int, i8, u8, i16, u16, i32, u32, i64, u64)")
