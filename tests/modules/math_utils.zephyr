# test_math_simple.zephyr - A simple math module for testing (no internal keyword)

# Public constants (will be exported)
const PI = 3.14159
const E = 2.71828

# Public functions (will be exported)
func add(a, b) {
    return a + b
}

func multiply(a, b) {
    return a * b
}

func circle_area(radius) {
    return PI * radius * radius
}

# Test if this module is run directly
if __module_name__ == "__main__" {
    print("Running math module as standalone script")
    print("PI =", PI)
    print("E =", E)
    print("add(5, 3) =", add(5, 3))
    print("multiply(4, 7) =", multiply(4, 7))
    print("circle_area(5) =", circle_area(5))
}
